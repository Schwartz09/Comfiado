<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CadastroActivity" >

    <ImageView
        android:id="@+id/imgLogo"
        style="@style/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.408"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_branca" />

    <EditText
        android:id="@+id/edtConfirmacaoSenha"
        style="@style/campos"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/campo"
        android:ems="10"
        android:hint="Confirmar Senha:"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgCifrao6"
        app:layout_constraintTop_toBottomOf="@+id/edtSenha" />

    <EditText
        android:id="@+id/edtNome"
        style="@style/campos"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/campo"
        android:ems="10"
        android:hint="Nome:"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgCifrao1"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtCpf"
        style="@style/campos"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/campo"
        android:ems="10"
        android:hint="CPF:"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgCifrao2"
        app:layout_constraintTop_toBottomOf="@+id/edtNome" />

    <EditText
        android:id="@+id/edtTelefone"
        style="@style/campos"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/campo"
        android:ems="10"
        android:hint="Telefone:"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgCifrao3"
        app:layout_constraintTop_toBottomOf="@+id/edtCpf" />

    <EditText
        android:id="@+id/edtEmail"
        style="@style/campos"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/campo"
        android:ems="10"
        android:hint="Email:"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgCifrao4"
        app:layout_constraintTop_toBottomOf="@+id/edtTelefone" />

    <EditText
        android:id="@+id/edtSenha"
        style="@style/campos"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/campo"
        android:ems="10"
        android:hint="Senha:"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgCifrao5"
        app:layout_constraintTop_toBottomOf="@+id/edtEmail" />

    <ImageView
        android:id="@+id/imgLogin"
        android:layout_width="113dp"
        android:layout_height="109dp"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="-15dp"
        android:rotation="180"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_login" />

    <ImageView
        android:id="@+id/imgCifrao1"
        style="@style/cifrao"
        android:layout_marginTop="186dp"
        app:layout_constraintBottom_toTopOf="@+id/imgCifrao2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/img_cifrao" />

    <ImageView
        android:id="@+id/imgCifrao2"
        style="@style/cifrao"
        android:layout_marginTop="256dp"
        app:layout_constraintBottom_toTopOf="@+id/imgCifrao3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/img_cifrao" />

    <ImageView
        android:id="@+id/imgCifrao3"
        style="@style/cifrao"
        android:layout_marginTop="326dp"
        app:layout_constraintBottom_toTopOf="@+id/imgCifrao4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.222"
        app:srcCompat="@drawable/img_cifrao" />

    <ImageView
        android:id="@+id/imgCifrao4"
        style="@style/cifrao"
        android:layout_marginTop="394dp"
        app:layout_constraintBottom_toTopOf="@+id/imgCifrao5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/img_cifrao" />

    <ImageView
        android:id="@+id/imgCifrao5"
        style="@style/cifrao"
        android:layout_marginTop="460dp"
        app:layout_constraintBottom_toTopOf="@+id/imgCifrao6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/img_cifrao" />

    <ImageView
        android:id="@+id/imgCifrao6"
        style="@style/cifrao"
        android:layout_marginTop="528dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_cifrao" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCadastrar"
        style="@style/btn"
        android:layout_width="174dp"
        android:layout_height="52dp"
        android:background="@drawable/borda"
        android:text="Cadastrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtConfirmacaoSenha"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imgCadastrar"
        android:layout_width="380dp"
        android:layout_height="153dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_cadastrar" />


</androidx.constraintlayout.widget.ConstraintLayout>